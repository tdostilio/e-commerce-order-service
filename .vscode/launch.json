{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run Order Service",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["start:debug"],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "outputCapture": "std",
      "sourceMaps": true,
      "autoAttachChildProcesses": true,
      "restart": true,
      "env": {
        "RABBITMQ_URL": "amqp://guest:guest@localhost:5672"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Tests",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["test"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    }
  ]
}
